{
  "name": "new-project",
  "version": "1.0.0",
  "description": "Npm workflow with testing",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "npm run server & npm run build-css & npm run build-js",
    "build-css": "node-sass assets/src/scss/build.scss assets/css/style.css -w",
    "build-js": "babel assets/src/js/build.js -w --out-file assets/js/scripts.js",
    "server": "lite-server",
    "test": "phantomas http://localhost:3020 -r csv",
    "test-responsive": "wraith --config ./wraith"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "backstopjs": "^1.3.5",
    "lite-server": "^2.2.2",
    "node-sass": "^3.8.0",
    "nodemon": "^1.9.2",
    "phantomjs": "^2.1.7"
  }
}
